# ===========================================
# Sanity CMS Configuration
# ===========================================
NEXT_PUBLIC_SANITY_PROJECT_ID="<paste your project here>" # Required - The ID of your Sanity project
NEXT_PUBLIC_SANITY_DATASET="production" # Required - The dataset of your Sanity project
NEXT_PUBLIC_SANITY_API_VERSION="2025-09-25" # Optional - The API version provided to the Sanity Client
NEXT_PUBLIC_SANITY_STUDIO_URL="" # Optional, defaults to http://localhost:3333
SANITY_API_READ_TOKEN="<paste your token here>" # Required - The read token for your Sanity project

# ===========================================
# Client Portal Configuration
# ===========================================
PORTAL_JWT_SECRET="<generate-32-byte-secret>" # Required - Secret for signing JWT tokens (use: openssl rand -base64 32)
NEXT_PUBLIC_PORTAL_URL="https://sidekickstrategies.com/portal" # Required - Base URL for magic links

# ===========================================
# Email Service (Resend)
# ===========================================
RESEND_API_KEY="re_xxxx" # Required - API key from resend.com for sending magic link emails

# ===========================================
# HubSpot Integration
# ===========================================
HUBSPOT_ACCESS_TOKEN="pat-na1-xxxx" # Required - HubSpot Private App token for CRM access

# ===========================================
# ClickUp Integration
# ===========================================
CLICKUP_API_TOKEN="pk_xxxx" # Required - ClickUp API token for task management
